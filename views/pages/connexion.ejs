<!DOCTYPE html>
<html lang="fr" dir="ltr">
    <head>
		<meta charset="UTF-8">
	    <meta name="viewport" content="width=device-width, initial-scale=1.0">
	    <meta http-equiv="X-UA-Compatible" content="ie=edge">
	    <link rel="stylesheet" href="./mincss/styles.css">
	    <title>WeMake - Connexion</title>
    </head>
    <body>
        <section class="container ">
            <div class="row">
                <div class="col-lg-3">

                </div>
                <div class="col-lg-6 text-center bloc-form">
                    <a href="" class="bloc-form__previous">&#8249;	Retour à l'accueil</a>
                    <h1 class="bloc-form__title"> WEMAKE</h1>
                    <form action="" class="bloc-form__form">
                        <input id="formMail" class="bloc-form__form__input" type="mail form__mail" placeholder="Votre adresse email"><br>
                        <input id="formPassword" class="bloc-form__form__input" type="password" placeholder="Votre mot de passe">
                    </form>
                    <div class="row">
                        <div class="col-lg-6">
                            <a href="#" class="bloc-form__forgot">Mot de passe oublié ?</a>
                        </div>
                        <div class="col-lg-6">
                            <a href="" id="connectionButton" class="bloc-form__connexion button button--blue" title="Se connecter">Se connecter</a>
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-lg-6">
                            <a href="#" class="bloc-form__facebook button button--blue">Connexion avec Facebook</a>
                        </div>
                        <div class="col-lg-6">
                            <a href="" class="bloc-form__google button button--red">Connexion avec Google</a>
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-lg-12">
                            <a href="#" class="bloc-form__subscribe">Vous n'êtes pas encore inscrit ? Inscrivez-vous</a>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3">

                </div>
            </div>
        </section>

        <script src="/socket.io/socket.io.js" charset="utf-8"></script>
        <script type="text/javascript">

          let $ = function(id){return document.getElementById(id)};

          //Initialisation de socket.io
          const socket = io('/');

          function connection(){

            const userInfo = {
              email: $('formMail').value,
              password: $('formPassword').value
            };

            socket.emit('connectionUser', userInfo);
          }

          $('connectionButton').addEventListener('click', () => {
            connection();
          });

          socket.on('emailAlreadyExists', () => {
            console.log('emailAlreadyExists')
          });

        </script>

    </body>
</html>
